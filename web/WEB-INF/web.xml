<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <context-param>
        <param-name>user</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>password</param-name>
        <param-value>123456</param-value>
    </context-param>
    <context-param>
        <param-name>url</param-name>
        <param-value>jdbc:mysql://os01:3306/userdb?characterEncoding=utf-8</param-value>
    </context-param>
    <context-param>
        <param-name>driver</param-name>
        <param-value>com.mysql.jdbc.Driver</param-value>
    </context-param>

    <welcome-file-list>
        <welcome-file>/login.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>loginservlet</servlet-name>
        <servlet-class>com.project1.servlet.Servlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginservlet</servlet-name>
        <url-pattern>/loginServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Userservlet</servlet-name>
        <servlet-class>com.project1.servlet.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Userservlet</servlet-name>
        <url-pattern>/_userservlet</url-pattern>
    </servlet-mapping>
    <!--过滤器-->
    <filter>
        <filter-name>encodeFilter</filter-name>
        <filter-class>com.project1.servlet.EncodeFilter</filter-class>
        <init-param>
            <param-name>encode</param-name>
            <param-value>utf-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>encodeFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>readServlet</servlet-name>
        <servlet-class>com.project1.servlet.readServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>readServlet</servlet-name>
        <url-pattern>/_readservlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>logoutServlet</servlet-name>
        <servlet-class>com.project1.servlet.logoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logoutServlet</servlet-name>
        <url-pattern>/_logoutservlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>adminServlet</servlet-name>
        <servlet-class>com.project1.servlet.adminservlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>adminServlet</servlet-name>
        <url-pattern>/_adminservlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>verifierServlet</servlet-name>
        <servlet-class>com.project1.servlet.verifierservlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>verifierServlet</servlet-name>
        <url-pattern>/_verifierservlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>scholarServlet</servlet-name>
        <servlet-class>com.project1.servlet.scholarservlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>scholarServlet</servlet-name>
        <url-pattern>/_scholarservlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>uploadServlet</servlet-name>
        <servlet-class>com.project1.servlet.uploadServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>uploadServlet</servlet-name>
        <url-pattern>/_uploadservlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>examServlet</servlet-name>
        <servlet-class>com.project1.servlet.examServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>examServlet</servlet-name>
        <url-pattern>/_examservlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>questionsUpload</servlet-name>
        <servlet-class>com.project1.servlet.questionsUpload</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>questionsUpload</servlet-name>
        <url-pattern>/_questionsupload</url-pattern>
    </servlet-mapping>
    <servlet>
    <servlet-name>handleScore</servlet-name>
    <servlet-class>com.project1.servlet.handleScore</servlet-class>
</servlet>
    <servlet-mapping>
        <servlet-name>handleScore</servlet-name>
        <url-pattern>/_handlescore</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>handleChoose</servlet-name>
        <servlet-class>com.project1.servlet.handleChoose</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>handleChoose</servlet-name>
        <url-pattern>/_handlechoose</url-pattern>
    </servlet-mapping>



</web-app>

